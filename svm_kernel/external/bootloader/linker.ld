ENTRY(init_bootloader)

SECTIONS {
    __page_table_start = .;
    _p4 = .;
    . += 0x1000;
    _p3 = .;
    . += 0x1000;
    _p2 = .;
    . += 0x1000;
    _p1 = .;
    . += 0x1000;
    __page_table_end = .;
    __bootloader_start = .;
    . = 1M;
    .boot :
    {
        /* ensure that the multiboot header is at the beginning */
        KEEP(*(.multiboot_header))
    }

    .text :
    {
        *(.text)
        *(.init_bootloader)
    }
    __bootloader_end = .;

    .kernel :
    {
        KEEP(*(.kernel))
    }
}
